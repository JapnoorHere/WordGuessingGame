<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#3CBB86FC"
        tools:context=".GameActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/purple_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remaining :  "
                    android:textColor="#4E4E4E"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/remainingTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="0"
                    android:textColor="#F7E1FF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Correct :   "
                    android:textColor="#4E4E4E"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/solvedtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="0"
                    android:textColor="#F7E1FF"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/hintTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:maxLines="2"
            android:gravity="center"
            android:textStyle="bold"
            android:text="A fruit which is either red or green."
            android:textColor="#4E4E4E"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/timerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:maxLines="2"
            android:text="30"
            android:textColor="#4E4E4E"
            android:textSize="50sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView
                android:foregroundTint="@color/purple_200"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:id="@+id/lottie"
                app:lottie_fileName="wrong.json"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center">

                <EditText
                    android:id="@+id/et1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:cardBackgroundColor="#1A1D2E"
                    app:cardCornerRadius="30dp" />

                <EditText
                    android:id="@+id/et2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:cardBackgroundColor="#1A1D2E"
                    app:cardCornerRadius="30dp" />

                <EditText
                    android:id="@+id/et3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:cardBackgroundColor="#1A1D2E"
                    app:cardCornerRadius="30dp" />

                <EditText
                    android:id="@+id/et4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:cardBackgroundColor="#1A1D2E"
                    app:cardCornerRadius="30dp" />

                <EditText
                    android:id="@+id/et5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:cardBackgroundColor="#1A1D2E"
                    app:cardCornerRadius="30dp" />

                <EditText
                    android:id="@+id/et6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:cardBackgroundColor="#1A1D2E"
                    app:cardCornerRadius="30dp" />


            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/nextbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#b68aec"
                android:src="@drawable/baseline_arrow_forward_24" />

        </RelativeLayout>

    </LinearLayout>
</layout>